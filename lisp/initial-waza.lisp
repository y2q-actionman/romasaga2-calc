(defun find-初期技-in-閃き済み技-list (技種類 閃き済み技-list)
  (loop for waza in (find-技種類-初期技一覧-alist 技種類)
     when (includes 閃き済み技-list waza)
     return waza))

(defun find-character-初期技-list (character-name 閃き済み技-list)
  (let ((w-list (find-character-name-to-初期装備技種類-alist character-name)))
    (if (includes +技種類-list+ (first w-list))
        (loop for w in w-list
           for waza = (find-初期技-in-閃き済み技-list w 閃き済み技-list)
           when waza
           collect waza)
        w-list)))                   ; Special character and magicians.
